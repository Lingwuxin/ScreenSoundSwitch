<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ScreenSoundSwitch.WinUI.View.AudioPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:ScreenSoundSwitch.WinUI.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <!-- 定义 AudioFileMsg 的数据模板 -->
        <DataTemplate x:Key="AudioFileMsgListViewTemplate" x:DataType="models:AudioFileMsg">
            <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                <!-- 显示标题 -->
                <TextBlock Text="{x:Bind Title}" FontWeight="Bold" Margin="0,0,10,0"/>
                <!-- 显示作者 -->
                <TextBlock Text="{x:Bind Author}" Margin="0,0,10,0"/>
                <!-- 显示时长（可以进一步格式化TimeSpan）-->
                <TextBlock Text="{x:Bind Duration}" />
            </StackPanel>
        </DataTemplate>
    </Page.Resources>
    <Grid>

        <ListView
            x:Name="AudioMsgListView"
            ItemTemplate="{StaticResource AudioFileMsgListViewTemplate}"
            BorderThickness="1"
            BorderBrush="{ThemeResource SystemControlForegroundBaseMediumLowBrush}"
            Width="350"
            Height="400"
            HorizontalAlignment="Left"/>
    </Grid>
</Page>
