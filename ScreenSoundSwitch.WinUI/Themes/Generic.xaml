<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local2="using:ScreenSoundSwitch.WinUI.Controls"
    xmlns:local="using:ScreenSoundSwitch.WinUI">

    <Style TargetType="local2:ContentControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local2:ContentControl">
                    <Border
                        CornerRadius="5"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        Margin="10,3,10,3"
                        BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        >
                    <Grid Height="55">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                        <!-- Icon -->
                            <ContentPresenter Grid.Column="0"
                                Content="{TemplateBinding Icon}"
                                Margin="12,0"
                                Padding="0,10,0,10"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"/>

                            <ContentPresenter Grid.Column="1"
                                      Content="{TemplateBinding LeftContent}"
                                      Margin="12,0"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Left"/>


                            <!-- Right Content -->
                        <ContentPresenter Grid.Column="2"
                                      Content="{TemplateBinding RightContent}"
                                      Margin="12,0"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Right"/>
                    </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
